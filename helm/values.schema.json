{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "additionalProperties": false,
  "properties": {
    "certificateSecret": {
      "type": "string"
    },
    "global": {
      "type": "object"
    },
    "image": {
      "additionalProperties": false,
      "properties": {
        "pullPolicy": {
          "type": "string"
        },
        "repository": {
          "type": "string"
        },
        "tag": {
          "type": "string"
        }
      },
      "type": "object"
    },
    "policyServer": {
      "additionalProperties": false,
      "properties": {
        "address": {
          "type": "string"
        }
      },
      "required": [
        "address"
      ],
      "type": "object"
    },
    "pollInterval": {
      "type": "string"
    },
    "resources": {
      "type": ["object", "null"]
    }
  },
  "type": "object"
}